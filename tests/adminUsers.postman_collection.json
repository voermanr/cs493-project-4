					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"{{$randomFirstName}} {{$randomLastName}}\",\n    \"password\": \"{{$randomPassword}}\",\n    \"email\": \"{{$randomEmail}}\",\n    \"admin\": true\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/users",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"users"
					]
				}
			},
